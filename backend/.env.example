# PostgreSQL connection (Railway auto-provides these via Reference Variables)
PGHOST=localhost
PGPORT=5432
PGDATABASE=mirror_study
PGUSER=postgres
PGPASSWORD=

# OpenAI
# Default model used when a room does not specify a model in the admin UI
OPENAI_API_KEY=
